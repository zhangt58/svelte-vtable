{
  "name": "@zhangt58/svelte-vtable",
  "version": "0.1.1",
  "description": "A Svelte 5 library for virtualized data tables with sorting, selection, and pagination controls.",
  "type": "module",
  "svelte": "./src/lib/index.js",
  "main": "./src/lib/index.js",
  "module": "./src/lib/index.js",
  "exports": {
    ".": {
      "svelte": "./src/lib/index.js",
      "import": "./src/lib/index.js",
      "default": "./src/lib/index.js"
    },
    "./styles.css": "./src/lib/dist/styles.css"
  },
  "scripts": {
    "check": "svelte-check --tsconfig ./jsconfig.json",
    "build:styles": "node ./scripts/build-styles.cjs",
    "prepare": "npm run build:styles",
    "prepublishOnly": "npm run build:styles && npm run check",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "svelte",
    "svelte5",
    "table",
    "virtual",
    "data-table",
    "sortable",
    "pagination",
    "virtualized"
  ],
  "author": "zhangt58",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhangt58/svelte-vtable"
  },
  "bugs": {
    "url": "https://github.com/zhangt58/svelte-vtable/issues"
  },
  "homepage": "https://github.com/zhangt58/svelte-vtable#readme",
  "peerDependencies": {
    "flowbite-svelte": "^1.28.1",
    "flowbite-svelte-icons": "^3.0.0",
    "svelte": "^5.43.5",
    "svelte-virtuallists": "^1.4.2",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "flowbite-svelte": "^1.28.1",
    "flowbite-svelte-icons": "^3.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.3.4",
    "svelte-virtuallists": "^1.4.2",
    "vite": "^7.2.2",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ]
}
